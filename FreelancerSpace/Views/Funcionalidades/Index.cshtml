@model IEnumerable<FreelancerSpace.Models.FuncionalidadesModel>

@{
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Lista Funcionalidades</title>
</head>
<body>
<p>
    <a asp-action="Create">Criar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Caminho)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Caminho)
            </td>
            <td>
                @Html.ActionLink("Editar", "Create", "Funcionalidades", new { id = item.Id }) |
                @Html.ActionLink("Excluir", "Excluir", "Funcionalidades", new { id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
<span>@ViewBag.message</span>
</body>
</html>
