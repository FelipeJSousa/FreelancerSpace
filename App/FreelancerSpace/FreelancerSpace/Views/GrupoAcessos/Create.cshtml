@model FreelancerSpace.Models.AcessosModel

@{
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Grupo Acessos</title>
</head>
<body>

<h4>Grupo Acessos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Salvar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Id" class="form-control" hidden />
            </div>
            <div class="form-group">
                <label asp-for="IdGrupoNavigation.Nome" class="control-label"></label>
                <input asp-for="IdGrupoNavigation.Nome" class="form-control" />
                <span asp-validation-for="IdGrupoNavigation.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdGrupoNavigation.Descricao" class="control-label"></label>
                <input asp-for="IdGrupoNavigation.Descricao" class="form-control" />
                <span asp-validation-for="IdGrupoNavigation.Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdFuncionalidade" class="control-label"></label>
                <select asp-for="IdFuncionalidade" class="form-control" asp-items='(new SelectList(@ViewBag.listFuncionalidades,"Id","Nome"))'></select>
            </div>
            <div class="form-group">
                <label asp-for="IdPermissao" class="control-label"></label>
                <select asp-for="IdPermissao" class="form-control" asp-items='(new SelectList(@ViewBag.listPermissoes,"Id","Nome"))'></select>
            </div>
            <div class="form-group">
                <input id="btnSubmit" type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script>
    if (window.location.href.includes("Create/")) {
        document.getElementById("btnSubmit").value = "Editar";
    }
    else{
        document.getElementById("btnSubmit").value = "Salvar";
    }
</script>
</body>
</html>
