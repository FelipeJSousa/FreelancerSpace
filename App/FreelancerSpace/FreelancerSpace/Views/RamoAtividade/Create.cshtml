@model FreelancerSpace.Models.RamoAtividadeModel

@{

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Ramo de atividade</title>
</head>
<body>

<h4>Ramo de Atividades</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Salvar">
            <div class="form-group">
                <input asp-for="Id" class="form-control" hidden/>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input id="btnSubmit" type="submit" value="" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <span>@ViewBag.message</span>
</div>
<div>
    <a asp-action="Index">Voltar para lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}


}

<script>
    if (window.location.href.includes("Create/")) {
        document.getElementById("btnSubmit").value = "Editar";
    }
    else{
        document.getElementById("btnSubmit").value = "Salvar";
    }
</script>
</body>
</html>
