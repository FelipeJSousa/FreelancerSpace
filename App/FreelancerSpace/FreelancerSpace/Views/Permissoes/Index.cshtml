@model IEnumerable<FreelancerSpace.Models.PermissoesModel>

@{
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Permissões</title>
</head>
<body>
    <p>
        <a asp-action="Create">Criar Novo</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descricao)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descricao)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Create", "Permissoes", new { id = item.Id }) |
                        @Html.ActionLink("Excluir", "Excluir", "Permissoes", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <span>@ViewBag.message</span>
</body>
</html>
